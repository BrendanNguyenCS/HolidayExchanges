                            @Html.ActionLink("Send Assignments", "SendAssignments", new { id = Model.Group.GroupID }, new { @class = "btn btn-info" })
                        }
                    </div>
                *@
                <!-- #endregion -->
                <!-- #region Button Group Attempt with "a" tags -->
                @*<div class="btn-group" role="group" aria-label="Buttons for group details page">
                        <a class="btn btn-primary" href="@Url.Action("Index", "Home")" type="button">Back to Home</a>
                        <a class="btn btn-outline-dark" type="button" href="@Url.Action("Edit",  new { id = Model.Group.GroupID })">Edit</a>
                        @if (!Model.Group.HasBeenPaired)
                        {
                            <a class="btn btn-secondary" href="@Url.Action("Pair", new { id = Model.Group.GroupID })" type="button">Pair</a>
                        }
                        @if (Model.Group.HasBeenPaired)
                        {
                            <a class="btn btn-danger" href="@Url.Action("Pair", new { id = Model.Group.GroupID })" type="button">Pair Again</a>
                            <a class="btn btn-info" href="@Url.Action("SendAssignments", new { id = Model.Group.GroupID })" type="button">Send Assignments</a>
                        }
                    </div>
                *@
                <!-- #endregion -->
                <!-- TODO: Ask jon why button group isn't working (removing the space between buttons) -->
