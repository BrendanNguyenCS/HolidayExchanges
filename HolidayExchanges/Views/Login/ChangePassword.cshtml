@model HolidayExchanges.ViewModels.ChangePasswordVM

@{
    ViewBag.Title = "Change Your Password";
}

<div class="container">

    @Html.Partial("_PageTitle", "Change Your Password")

    <section id="ChangePWForm">
        <div class="container">
            @using (Html.BeginForm("ChangePassword", "Login", FormMethod.Post, new { @id = "form-changepw" }))
            {
                @Html.AntiForgeryToken()
                <div class="container form-horizontal">
                    <div class="row">
                        <div class="col-12">
                            @Html.HiddenFor(model => model.Username)
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group row">
                                @Html.LabelFor(model => model.CurrentPassword, htmlAttributes: new { @class = "col-form-label col-sm-4 col-md-4 offset-lg-1 col-lg-3" })
                                <div class="col-12 col-md-6 col-lg-5">
                                    @Html.PasswordFor(model => model.CurrentPassword, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.CurrentPassword, "", htmlAttributes: new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.NewPassword, htmlAttributes: new { @class = "col-form-label col-sm-4 col-md-4 offset-lg-1 col-lg-3" })
                                <div class="col-12 col-md-6 col-lg-5">
                                    @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.NewPassword, "", htmlAttributes: new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "col-form-label col-sm-4 col-md-4 offset-lg-1 col-lg-3" })
                                <div class="col-12 col-md-6 col-lg-5">
                                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", htmlAttributes: new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="offset-md-4 col-sm-8">
                                    <input type="submit" class="btn btn-primary" id="ChangePWBtn" value="Change" />
                                    <a href="@Url.Action("Login", "Login")" class="btn btn-outline-secondary" id="ChangePWBacktoLoginBtn">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>