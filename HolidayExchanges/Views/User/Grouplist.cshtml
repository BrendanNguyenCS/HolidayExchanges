    *@

    @Html.Partial("_PageTitle", "All groups for " + @Model.UserName)

    <section id="Grouplist">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    @foreach (var group in Model.Groups)
                    {
                        <details>
                            <summary>@group.Name</summary>
                            <div class="container-fluid">
                                <dl class="row">
                                    <dt class="col-5 col-md-4 offset-lg-1 col-lg-3">
                                        Name
                                    </dt>
                                    <dd class="col-12 col-md-8">
                                        @group.Name
                                    </dd>
                                    <dt class="col-5 col-md-4 offset-lg-1 col-lg-3">
                                        Exchange Date
                                    </dt>
                                    <dd class="col-12 col-md-8">
                                        @group.ExchangeDate
                                    </dd>
                                    <dt class="col-7 col-md-4 offset-lg-1 col-lg-3">
                                        Has Been Paired?
                                    </dt>
                                    <dd class="col-12 col-md-8">
                                        @{
                                            if (group.HasBeenPaired)
                                            {
                                                <p>Yes</p>
                                            }
                                            else
                                            {
                                                <p>No</p>
                                            }
                                        }
                                    </dd>
                                </dl>
                            </div>
                            <div class="row">
                                <div class="col-6 offset-lg-1">
                                    @Html.ActionLink("View", "Details", "Group", new { id = group.GroupID }, htmlAttributes: new { @class = "btn btn-info" })
                                </div>
                            </div>
                        </details>
                    }

                    <div class="container mt-1">
                        <dl class="row">
                            <dt class="col-3 offset-md-1 col-md-1">
                                @Html.DisplayNameFor(model => model.Count)
                            </dt>
                            <dd class="col-9">
                                @Html.DisplayFor(model => model.Count)
                            </dd>
                        </dl>
                    </div>

                    <div class="row">
                        <div class="offset-1 col-11">
                            @Html.ActionLink("Back to Profile", "Details", "User", new { id = Model.UserID }, new { @class = "btn btn-outline-primary" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>