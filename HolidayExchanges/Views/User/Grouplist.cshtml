@model HolidayExchanges.ViewModels.GrouplistViewModel

@{
    ViewBag.Title = "Grouplist";
}

<link href="~/Content/Grouplist.css"
      rel="stylesheet"
      type="text/css" />

<div class="container">

    @*
    <section id="GrouplistTitle">
