@model HolidayExchanges.ViewModels.WishViewModel

@{
    ViewBag.Title = "Create a New Wish";
}

<div class="container">
    <section id="WishCreateTitle">
        <div class="row">
            <div class="page-header col-12">
                <h1 class="text-center display-5">New Wish</h1>
                <hr />
            </div>
        </div>
    </section>

    <section id="WishCreateForm">
        <div class="container body-content">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="container-fluid form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.UserId)

                    <!-- #region Remove functionality to edit user id -->
                    @*<div class="form-group row">
                            @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "col-form-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                            </div>
                        </div>*@
                    <!-- #endregion -->

                    <div class="form-group row">
                        @Html.LabelFor(model => model.ItemName, htmlAttributes: new { @class = "col-form-label col-6 col-md-3 offset-lg-1 col-lg-2 offset-xl-1 col-xl-2" })
                        <div class="col-12 col-md-9 col-lg-8 col-xl-7">
                            @Html.EditorFor(model => model.ItemName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ItemName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- add text area for -->
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-form-label col-5 col-md-3 offset-lg-1 col-lg-2" })
                        <div class="col-12 col-md-9 col-lg-8 col-xl-7">
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @rows = 4 } })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Quantity, htmlAttributes: new { @class = "col-form-label col-4 col-md-3 offset-lg-1 col-lg-2" })
                        <div class="col-4 col-md-3 col-lg-2">
                            @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                            @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.ItemLink, htmlAttributes: new { @class = "col-form-label col-5 col-md-3 offset-lg-1 col-lg-2" })
                        <div class="col-12 col-md-9 col-lg-8 col-xl-7">
                            @Html.EditorFor(model => model.ItemLink, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ItemLink, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!-- add text area for -->
                    <div class="form-group row">
                        @Html.LabelFor(model => model.PurchasingInstructions, htmlAttributes: new { @class = "col-form-label col-9 col-md-3 offset-lg-1 col-lg-2" })
                        <div class="col-12 col-md-9 col-lg-8 col-xl-7">
                            @Html.EditorFor(model => model.PurchasingInstructions, new { htmlAttributes = new { @class = "form-control", @rows = 8 } })
                            @Html.ValidationMessageFor(model => model.PurchasingInstructions, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="form-check-inline offset-lg-1">
                            @Html.LabelFor(model => model.HasBeenBought, htmlAttributes: new { @class = "form-check-label col-12" })

                            <!-- #region Fixing checkbox -->
                            @*<div class="col-5">*@
                            @*@Html.CheckBoxFor(model => model.HasBeenBought, new { @class = "form-control", @type = "checkbox" })*@
                            <!-- #endregion -->

                            @Html.CheckBoxFor(model => model.HasBeenBought, htmlAttributes: new { @class = "form-check-input" })
                            @Html.ValidationMessageFor(model => model.HasBeenBought, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="offset-md-3 col-md-9 offset-lg-3">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            @Html.ActionLink("Back to Profile", "Details", "User", new { id = Model.UserId }, new { @class = "btn btn-outline-secondary btn-sm" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>