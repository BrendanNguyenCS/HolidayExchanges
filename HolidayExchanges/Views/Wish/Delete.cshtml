@model HolidayExchanges.Models.Wish

@{
    ViewBag.Title = "Delete a Wish";
}

<section id="WishDeleteTitle">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4 text-center">Delete this Wish</h1>
            <hr />
        </div>
    </div>
</section>

<section id="WishDeleteDetails">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h3>Are you sure you want to delete this?</h3>
            </div>
        </div>
        <dl class="row">
            <dt class="col-5 col-md-4 offset-lg-1 col-lg-3">
                @Html.DisplayNameFor(model => model.User.UserName)
            </dt>

            <dd class="col-12 col-md-8">
                @Html.DisplayFor(model => model.User.UserName)
            </dd>

            <dt class="col-5 col-md-4 offset-lg-1 col-lg-3">
                @Html.DisplayNameFor(model => model.ItemName)
            </dt>

            <dd class="col-12 col-md-8">
                @Html.DisplayFor(model => model.ItemName)
            </dd>

            <dt class="col-5 col-md-4 offset-lg-1 col-lg-3">
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd class="col-12 col-md-8">
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt class="col-5 col-md-4 offset-lg-1 col-lg-3">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>

            <dd class="col-12 col-md-8">
                @Html.DisplayFor(model => model.Quantity)
            </dd>

            <dt class="col-5 col-md-4 offset-lg-1 col-lg-3">
                @Html.DisplayNameFor(model => model.ItemLink)
            </dt>

            <dd class="col-12 col-md-8">
                <a href="@Model.ItemLink" style="text-decoration: none;" target="_blank">Click here</a>
            </dd>

            <dt class="col-5 col-md-4 offset-lg-1 col-lg-3">
                @Html.DisplayNameFor(model => model.PurchasingInstructions)
            </dt>

            <dd class="col-12 col-md-8">
                @Html.DisplayFor(model => model.PurchasingInstructions)
            </dd>

            <dt class="col-5 col-md-4 offset-lg-1 col-lg-3">
                @Html.DisplayNameFor(model => model.HasBeenBought)
            </dt>

            <dd class="col-12 col-md-8">
                @Html.DisplayFor(model => model.HasBeenBought)
            </dd>
        </dl>

        <div class="row">
            <div class="col-12 offset-lg-1">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        @Html.ActionLink("Back to Wishlist", "Wishlist", "User", new { id = Model.User.UserID }, new { @class = "btn btn-outline-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
</section>